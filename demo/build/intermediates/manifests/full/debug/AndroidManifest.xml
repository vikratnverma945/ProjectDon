<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.google.android.cameraview.demo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.1" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.Demo" >
        <activity android:name="com.google.android.cameraview.demo.Welcome_Activity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.google.android.cameraview.demo.MainActivity"
            android:screenOrientation="portrait" />

        <service
            android:name="com.google.android.cameraview.demo.OraganiserService"
            android:exported="false" />

        <activity android:name="com.google.android.cameraview.demo.PeopleView" />
        <activity android:name="com.google.android.cameraview.demo.PersonImagesView" />
        <activity android:name="com.google.android.cameraview.demo.Person_Images_View" />
    </application>

</manifest>